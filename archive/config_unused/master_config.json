  "logging": {
    "level": "INFO",
    "console_output": true,
    "file_output": true,
    "max_file_size_mb": 10,
    "backup_count": 5,
    "format": "[{timestamp}] {module_name}: {message} {status}",
    "timestamp_format": "%Y-%m-%d %H:%M:%S"
  },
  "scheduling": {
    "timezone": "US/Eastern",
    "posting_frequency": {
      "twitter": "0 9,12,15,18,21 * * *",
      "mastodon": "0 10,13,16,19 * * *", 
      "bluesky": "0 8,11,14,17,20 * * *"
    },
    "interactive_frequency": "*/15 * * * *",
    "maintenance_frequency": "0 2 * * *"
  },
  "content": {
    "csv_encoding": "utf-8",
    "fallback_encodings": ["latin-1", "cp1252", "windows-1252"],
    "max_content_length": {
      "twitter": 280,
      "mastodon": 500,
      "bluesky": 300
    },
    "content_filters": {
      "enabled": true,
      "blocked_words": [],
      "min_length": 10,
      "max_hashtags": 3
    }
  },
  "interactive": {
    "reply_cooldown_hours": 2,
    "max_replies_per_user": 3,
    "follow_back_enabled": true,
    "reaction_types": ["like", "repost"],
    "notification_processing": {
      "enabled": true,
      "batch_size": 50,
      "max_age_hours": 24
    }
  },
  "security": {
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 30,
      "burst_limit": 60
    },
    "token_refresh": {
      "auto_refresh": true,
      "refresh_threshold_hours": 2,
      "max_retry_attempts": 3
    }
  },
  "rss": {
    "feeds": [
      "https://thesixthlense.com/feed.xml"
    ],
    "poll_interval_minutes": 20,
    "post_delay_seconds": [5, 10],
    "enable_twitter": true,
    "enable_mastodon": true,
    "enable_bluesky": true,
    "post_on_first_run": true,
    "llm_enabled": true,
    "llm_model": "gpt-4o",
    "staggered_posting": {
      "enabled": true,
      "delay_between_platforms_minutes": [40, 80],
      "randomize_platform_order": true
    },
    "test_mode": {
      "enabled": false,
      "poll_interval_minutes": 5,
      "delay_between_platforms_minutes": [5, 15]
    }
  }
}
